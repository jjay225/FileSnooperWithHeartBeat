{
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Properties": {
      "Application": "FileSnooper"
    },
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": { "path": "C:\\Logs\\Snooper\\LogFile.txt" }
      },
      { "Name": "Console" }

    ]
  },
  "FileMonitorPaths": [

    {
      "Source": "",
      "Target": ""
    },
    {
      "Source": "",
      "Target": ""
    }

  ],
  "FileTypeToMonitor": "*.cs",
  "SnoopDelayInMinutes": 2
}